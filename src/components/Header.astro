---
import LangButton from "../components/LangButton.astro";
---

<header>
  <nav>
    <div class="buttons">
      <ul class="ul">
        <li>
          <LangButton variant="menu" size="large" linkTo="/index.html" text="DK" />
        </li>
        <li>
          <LangButton variant="menu" size="large" linkTo="/index.html" text="EN" />
        </li>
      </ul>
    </div>

    <div class="logobrand">
      <img src="public/img/logos/logo_hvid@3x.png" alt="Royal Escapes logo" />
    </div>

    <div id="burger-c" class="burgermenu-container minnav">
      <img class="burgermenu" src="public/img/fotos/menu.svg" alt="" />
      <div class="mobil-menu menu-v">
        <ul>
          <li><a href="/index.html">Forside</a></li>
          <li><a href="/contact.html">Kontakt</a></li>
        </ul>
      </div>
    </div>
